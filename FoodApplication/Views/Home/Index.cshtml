@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <table class= "table table-striped">
        <tbody>
            @foreach (FoodApplication.Models.Foods food in Model)
            {
                <tr>
                    <td>
                        <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                            <div class="card-header">@food.FoodName</div>
                            <div class="card-body">
                                <h4 class="card-title">@food.TypeID</h4>
                                <p class="card-text" > <a href = @food.Recepy>Resepti</a></p>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>